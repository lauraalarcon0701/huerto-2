  <title>Huerto Educativo Dinámico</title>
  <style>
    body { font-family: Arial; background: #e8f5e9; padding: 20px; }
    iframe { width: 100%; height: 400px; border: none; border-radius: 10px; }
    button { margin: 5px; padding: 10px; background: #66bb6a; color: white; border: none; border-radius: 5px; cursor: pointer; }
    #info { background: white; padding: 15px; margin-top: 20px; border-radius: 10px; }
  </style>
</head>
<body>

<h1>Huerto Educativo Dinámico</h1>

<iframe id="visor" src=""></iframe>

<div id="botones"></div>

<div id="info">
  <h2>Selecciona una planta</h2>
  <p>El panel educativo aparecerá aquí.</p>
</div>

<script>
// Datos educativos
const datos = {
  tomate: {
    modelo: "ID_TOMATE",
    info: `
      <h2>Tomate</h2>
      <p><strong>Siembra:</strong> Marzo – Mayo</p>
      <p><strong>Riego:</strong> Moderado</p>
      <p><strong>Sol:</strong> Mucho sol</p>
      <p><strong>Cosecha:</strong> 70–90 días</p>
      <p><strong>Curiosidad:</strong> Es un fruto.</p>
      <p><strong>Consejo:</strong> Usa tutores.</p>
    `
  },
  lechuga: {
    modelo: "ID_LECHUGA",
    info: `
      <h2>Lechuga</h2>
      <p><strong>Siembra:</strong> Todo el año</p>
      <p><strong>Riego:</strong> Frecuente</p>
      <p><strong>Sol:</strong> Medio</p>
      <p><strong>Cosecha:</strong> 30–60 días</p>
      <p><strong>Curiosidad:</strong> Crece rápido.</p>
      <p><strong>Consejo:</strong> Mantén el suelo húmedo.</p>
    `
  },
  zanahoria: {
    modelo: "ID_ZANAHORIA",
    info: `
      <h2>Zanahoria</h2>
      <p><strong>Siembra:</strong> Primavera</p>
      <p><strong>Riego:</strong> Ligero</p>
      <p><strong>Sol:</strong> Medio</p>
      <p><strong>Cosecha:</strong> 70–80 días</p>
      <p><strong>Curiosidad:</strong> Antes eran moradas.</p>
      <p><strong>Consejo:</strong> Suelo suelto.</p>
    `
  }
};

// Cargar lista de plantas reales
fetch("plantas.json")
  .then(r => r.json())
  .then(data => {
    const cont = document.getElementById("botones");
    data.huerto.forEach(planta => {
      const btn = document.createElement("button");
      btn.textContent = planta;
      btn.onclick = () => mostrar(planta);
      cont.appendChild(btn);
    });
  });

function mostrar(planta) {
  const d = datos[planta];
  document.getElementById("visor").src =
    `https://sketchfab.com/models/${d.modelo}/embed`;
  document.getElementById("info").innerHTML = d.info;
}
</script>

</body>
</html>
