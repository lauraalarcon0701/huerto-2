<head>
  <meta charset="UTF-8">
  <title>Huerto Educativo</title>
  <style>
    body { font-family: Arial; background: #e8f5e9; padding: 20px; }
    iframe { width: 100%; height: 400px; border: none; border-radius: 10px; }
    button { margin: 5px; padding: 10px; background: #66bb6a; color: white; border: none; border-radius: 5px; cursor: pointer; }
    #info { background: white; padding: 15px; margin-top: 20px; border-radius: 10px; }
  </style>
</head>
<body>

<h1>Huerto Educativo</h1>

<!-- MODELO 3D -->
<iframe id="visor" src="https://sketchfab.com/models/ID_DEL_MODELO/embed"></iframe>

<!-- BOTONES -->
<button onclick="mostrar('tomate')">Tomate</button>
<button onclick="mostrar('lechuga')">Lechuga</button>
<button onclick="mostrar('zanahoria')">Zanahoria</button>

<!-- PANEL EDUCATIVO -->
<div id="info">
  <h2>Elige una planta</h2>
  <p>Aquí aparecerá la información educativa.</p>
</div>

<script>
function mostrar(planta) {
  if (planta === 'tomate') {
    document.getElementById("visor").src = "https://sketchfab.com/models/ID_TOMATE/embed";
    document.getElementById("info").innerHTML = `
      <h2>Tomate</h2>
      <p><strong>Siembra:</strong> Marzo - Mayo</p>
      <p><strong>Riego:</strong> Moderado</p>
      <p><strong>Sol:</strong> Mucho sol</p>
      <p><strong>Dato curioso:</strong> Es un fruto, no una verdura.</p>
    `;
  }

  if (planta === 'lechuga') {
    document.getElementById("visor").src = "https://sketchfab.com/models/ID_LECHUGA/embed";
    document.getElementById("info").innerHTML = `
      <h2>Lechuga</h2>
      <p><strong>Siembra:</strong> Todo el año</p>
      <p><strong>Riego:</strong> Frecuente</p>
      <p><strong>Sol:</strong> Medio</p>
      <p><strong>Dato curioso:</strong> Crece muy rápido.</p>
    `;
  }

  if (planta === 'zanahoria') {
    document.getElementById("visor").src = "https://sketchfab.com/models/ID_ZANAHORIA/embed";
    document.getElementById("info").innerHTML = `
      <h2>Zanahoria</h2>
      <p><strong>Siembra:</strong> Primavera</p>
      <p><strong>Riego:</strong> Ligero</p>
      <p><strong>Sol:</strong> Medio</p>
      <p><strong>Dato curioso:</strong> Antes eran moradas.</p>
    `;
  }
}
</script>

</body>
</html>
